<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/item_file"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:padding="@dimen/item_margin">

    <ImageView
        android:id="@+id/item_file_image"
        android:layout_width="@dimen/item_file_imag_width"
        android:layout_height="@dimen/item_file_imag_height"
        android:layout_margin="@dimen/item_margin"
        android:src="@mipmap/ic_launcher"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_file_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_text"
            android:textSize="18sp"
            android:text="name"/>

        <TextView
            android:id="@+id/item_file_path"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/secondary_text"
            android:textSize="14sp"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:text="/name"/>
    </LinearLayout>

</LinearLayout>